rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ðŸ“‚ Imagens de grupos â€” leitura pÃºblica, upload apenas por usuÃ¡rios autenticados
    match /group_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ðŸ“‚ Imagens de produtos â€” leitura pÃºblica, upload apenas do lojista autenticado
    match /product_images/{lojistaId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == lojistaId;
    }
    
    // ðŸ“‚ Comprovativos de pagamento â€” apenas o lojista pode fazer upload, e admins podem ler
    match /payment_proofs/{lojistaId}/{allPaths=**} {
      allow read: if get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if request.auth != null && request.auth.uid == lojistaId;
    }

    // ðŸš« Bloqueia todo o resto por defeito
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
